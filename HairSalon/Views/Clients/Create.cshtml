@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client;

<div class="container">
  <div class="header">
    <h1>Eau Claire's Salon</h1>
    <h3>New Client</h3>
  </div>

  <h2>Add a Client: </h2>

  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <br>
    @Html.LabelFor(model => model.Notes)
    @Html.TextBoxFor(model => model.Notes)
    <br>
    @Html.LabelFor(model => model.Stylist)
    @Html.DropDownList("StylistId")
    <br>
    <input type="submit" value="Add Client">
  }
  
  <p>@Html.ActionLink("Go Back to Stylists", "Index", "Stylists") </p>
</div>