@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client;

<div class="container">
  <div class="header">
    <h1>Eau Claire's Salon</h1>
    <h3>Edit Client</h3>
  </div>

  <h2>Edit @Html.DisplayFor(model => model.Name)'s file: </h2>

  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <br>
    @Html.LabelFor(model => model.Notes)
    @Html.TextBoxFor(model => model.Notes)
    <br>
    @Html.LabelFor(model => model.Stylist)
    @Html.DropDownList("StylistId")
    <br>
    <input type="submit" value="Save Changes">
  }
  <p>@Html.ActionLink("Go back to Clients", "Index")</p>
  <p>@Html.ActionLink("Go Back to Stylists", "Index", "Stylists") </p>
</div>