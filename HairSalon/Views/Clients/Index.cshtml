@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<div class="container">
  <div class="header">
    <h1>Eau Claire's Salon</h1>
    <h3>Clients</h3>
  </div>
  <h2>Current Clients: </h2>
  @if(@Model.Count == 0)
  {
    <p>No Clients logged. Please add a Client</p>
  }
  else
  {
    <ul>
      @foreach(Client client in Model) 
      {
        <li>Client: @Html.ActionLink($"{client.Name}", "Details", new{id = client.ClientId}) | Stylist: @client.Stylist.Name</li>
      }
    </ul>
  }
  <p> @Html.ActionLink("Add a Client", "Create") </p>
  <p> @Html.ActionLink("Return to Stylist list", "Index", "Stylists") </p>
  <p> @Html.ActionLink("Return Home", "Index", "Home") </p>
</div>